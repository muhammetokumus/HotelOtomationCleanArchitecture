@using HotelOtomation.Domain.Entities
@model City
@{
    ViewData["Title"] = "Edit";
}

<title>Edit City</title>
<form method="post" class="w-25 card container my-5">
    <h4 class="p-3">Edit City</h4>
    <hr />
    <div class="form-group p-3">
        <label>Id:</label>
        <input type="text" asp-for="Id" class="form-control float-end" disabled/>
    </div>
    <hr />
    <div class="form-group p-3">
        <label>City Name:</label>
        <input type="text" asp-for="Name" class="form-control float-end"/>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary float-end m-3">Edit City</button>
</form>

